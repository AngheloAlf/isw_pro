extends layout_index


block content
    #wrapper
        // Page Content
        #page-content-wrapper
            .container-fluid
                .row
                    .col-lg-12
                        h1 Sistema de gesti√≥n de tickets
                        a#menu-toggle.btn.btn-default(href='#menu-toggle') Menu
                        br
                        br 
                        p
                            | Bienvenido #{username} .
                        p
                            | Crear usuarios.

                            form(action="/userCrud/create", method="POST")
                                input#username(name='username', placeholder='username', type='text')
                                input#password(name='password', placeholder='password', type='password')
                                input#password2(name='password2', placeholder='verificar pass', type='password')
                                select#usertype(name='usertype')
                                    option(value='0') Operador
                                    option(value='1') Supervisor
                                    option(value='2') Jefe
                                button(name='submitButton', value='createTicket') Crear Usuario

                            form(action="/users", method="GET")
                                button Volver atras

        // /#page-content-wrapper
    // /#wrapper

    // Menu Toggle Script
    script.
        $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
        });

                            .container
                                .row
                                    .col-md-8
                                        #dia.tabcontent
                                            span.topright(onclick="this.parentElement.style.display='none'") x
                                            canvas.chart-bar(chart-data='dataDia', chart-labels='labelsDia', chart-colors='colors', chart-dataset-override='datasetOverride')

                                            select.form-control#annoDia(name="annoDia", ng-click="update()")
                                                option(ng-repeat="year in [2017, 2018, 2019, 2020, 2021]", value="{{ year }}") {{ year }}
                                            select.form-control#mesDia(name="mesDia", ng-click="update()")
                                                option(ng-repeat="year in yearsMonth", value="{{ year[0] }}") {{ year[1] }}

                                        #semana.tabcontent
                                            span.topright(onclick="this.parentElement.style.display='none'") x
                                            canvas.chart-bar(chart-data='dataSemana', chart-labels='labelsSemana', chart-colors='colors', chart-dataset-override='datasetOverride')
                                            select.form-control#annoMes(name="annoMes", ng-click="update()")
                                                option(ng-repeat="year in [2017, 2018, 2019, 2020, 2021]", value="{{ year }}") {{ year }}


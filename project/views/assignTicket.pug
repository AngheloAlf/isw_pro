extends layout

block content
    h1= title
    p Bienvenido #{username}

    p#ticketId(hidden="") #{ticketId}

    div(ng-app='assignTickets', ng-controller='assignTicketsCtrl')
        table
            tr
                th id
                th propietario
                th fecha_creacion
                th encargado
                th fuente
                th ip_origen
                th ip_destino
                th puerto
                th protocolo
                th tipo
                th intencionalidad
                th subarea
                th sistema_seguridad
                th fecha_operacion
                th dias_transcurridos
                th comentarios
                th correo_origen
                th correo_afectado
            tr(ng-repeat="ticket in ticketsData")
                td {{ ticket.id }}
                td {{ ticket.propietario }}
                td {{ ticket.fecha_creacion }}
                td {{ ticket.encargado }}
                td {{ ticket.fuente }}
                td {{ ticket.ip_origen }}
                td {{ ticket.ip_destino }}
                td {{ ticket.puerto }}
                td {{ ticket.protocolo }}
                td {{ ticket.tipo }}
                td {{ ticket.intencionalidad }}
                td {{ ticket.subarea }}
                td {{ ticket.sistema_seguridad }}
                td {{ ticket.fecha_operacion }}
                td {{ ticket.dias_transcurridos }}
                td {{ ticket.comentarios }}
                td {{ ticket.correo_origen }}
                td {{ ticket.correo_afectado }}




        form(action="/ticketCrud/assignTicket", method="POST")
            p Asignar este ticket al siguiente operador:
            input#ticketIdForm(name="ticketId", value='{ticketId}', hidden="")
            select#operadorId(name="operadorId", required="")
                option(ng-repeat="user in usersData", value="{{ user.id }}") {{ user.username }}
            button(name='submitButton', value='assign') Asignar ticket

    br

    form(action="/users/viewTickets", method="GET")
        button Volver atras


    form(action="/logout", method="POST")
        button(name='submitButton', value='log_out') Cerrar sesion

    script(src='/angular/assignTicket.js')

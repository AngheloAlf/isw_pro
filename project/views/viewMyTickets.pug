
extends layout_index

block content
    #wrapper
        //sidebar
        include sidebarInclude

        // Page Content
        #page-content-wrapper
            .container-fluid
                .row.col-lg-12
                    h1 Sistema de gestión de tickets
                    a#menu-toggle.btn.btn-default(href='#menu-toggle') Menu
                    br
                    p
                    //form(action="/users", method="GET")
                    //            button.btn.btn-primary.btn-lg Volver atrás
                    br
                    p#userId(hidden) #{userId}
                    br
                    div(ng-app='viewMyTickets', ng-controller='viewMyTicketsCtrl')
                        .rwd
                            table.rwd_auto
                                thead
                                    tr
                                        
                                        th Propietario
                                        th Fecha creación
                                        //th Encargado
                                        th Fuente
                                        th Tipo
                                        th Intencionalidad
                                        th Subarea
                                        th Fecha operacion
                                        //th Correo afectado
                                tbody
                                    tr(ng-repeat="ticket in ticketsData")
                                        td {{ ticket.propietario }}
                                        td {{ ticket.fecha_creacion }}
                                        // td {{ ticket.encargado }}
                                        td {{ ticket.fuente }}
                                        td {{ ticket.tipo }}
                                        td {{ ticket.intencionalidad }}
                                        td {{ ticket.subarea }}
                                        td {{ ticket.fecha_operacion }}
                                        //td {{ ticket.correo_afectado }}



    // Menu Toggle Script
    script(src="/js/toggleMenu.js")

    script(src='/angular/viewMyTickets.js')  

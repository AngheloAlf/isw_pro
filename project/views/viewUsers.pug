extends layout_index

block content

    #wrapper
        // Sidebar
        include sidebarInclude

        // Page Content
        #page-content-wrapper
            .container-fluid
                .row.col-lg-12
                    h1 Sistema de gestión de tickets
                    a#menu-toggle.btn.btn-default(href='#menu-toggle') Menu
                    br
                    p
                    //form(action="/users", method="GET")
                    //    button.btn.btn-primary.btn-lg Volver atrás
                    //br
                    div(ng-app='viewUsers', ng-controller='viewUsersCtrl')

                        br
                        .rwd
                            table.rwd_auto
                                thead
                                    tr
                                        th username
                                        th Tipo de usuario
                                        th Eliminar
                                tbody
                                    tr(ng-repeat="user in usersData")
                                        td {{ user.username }}
                                        td {{ user.usertype }}
                                        td
                                            form(action="/userCrud/delete", method="POST", onsubmit="return window.confirm('¿Esta seguro que desea eliminar a este usuario?')")
                                                input(name="userId", hidden="", value="{{ user.id }}")
                                                button.btn.btn-danger(name='submitButton', value='delete') Eliminar este usuario



    // Menu Toggle Script
    script(src="/js/toggleMenu.js")

    script(src='/angular/viewUsers.js')
